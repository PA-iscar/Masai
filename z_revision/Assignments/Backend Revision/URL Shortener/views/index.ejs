<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Url shortener</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <div class="container">

        <h1>URL Shortener</h1>
        <form action="/shortUrls" method="post" class="form-inline my-1">
            <div class="row m-0">
                <input required placeholder="URL" type="url" name="fullUrl" id="fullUrl" class=" col form-control me-4">
                <input placeholder="Short URL (optional)" type="text" name="shortUrl" id="shortUrl"
                    class="col form-control me-4">
                <input placeholder="Expire after (minutes) (optional)" type="number" name="expiry" id="expiry"
                    class="col form-control">
            </div>
            <button type="submit" class="btn btn-success mt-3">Shorten</button>
        </form>

        <table class="table table-striped">
            <thead>
                <th>Full URL</th>
                <th>Short URL</th>
                <th>Clicks</th>
                <th>Expires on</th>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl=> { %>

                    <tr>
                        <td>
                            <a href="<%= shortUrl.full %> " target="_blank">
                                <%= shortUrl.full %>
                            </a>
                        </td>
                        <td>
                            <a href="<%= shortUrl.short %>" target="_blank">
                                <%= shortUrl.short %>
                            </a>
                        </td>
                        <td>
                            <%= shortUrl.clicks %>
                        </td>
                        <td>
                            <%= shortUrl.expires %>
                        </td>
                    </tr>

                    <% }); %>
            </tbody>
        </table>
    </div>
</body>

</html>